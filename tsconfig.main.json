{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": false,
    "skipLibCheck": true
  },
  "include": [
    "src/main/**/*.ts",
    "src/shared/**/*.ts",
    "src/miner/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "renderer",
    "dist"
  ]
} 